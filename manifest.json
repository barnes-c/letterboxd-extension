{
    "manifest_version": 3,
    "name": "Letterboxd Enhancer",
    "version": "1.0",
    "description": "Enhance your Letterboxd experience with additional features and customization.",
    "permissions": [
        "storage",
        "tabs",
        "activeTab"
    ],
    "host_permissions": [
        "https://letterboxd.com/*"
    ],
    "background": {
        "service_worker": "src/background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://letterboxd.com/*"
            ],
            "js": [
                "src/movie-favorite-finder.js",
                "src/watchlist-movie-picker.js"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "src/assets/icons/*"
            ],
            "matches": [
                "https://letterboxd.com/*"
            ]
        }
    ]
}